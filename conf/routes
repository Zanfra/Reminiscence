# Home page
GET     /                       	controllers.Application.index()
GET		/assets/*file				controllers.Assets.at(path="/public", file)                                

# Tasks          
GET     /tasks                  	controllers.Application.tasks()
POST    /tasks                  	controllers.Application.newTask()
POST    /tasks/:id/delete       	controllers.Application.deleteTask(id: Long)

# Context
GET		/person/:personId			controllers.ContextApp.findbyPerson(personId: Long)
GET		/context/:fuzzyDateId		controllers.ContextApp.getContextByDate(fuzzyDateId: Long)
GET		/context/:cityForId			controllers.ContextApp.getContextByLocation(cityForId: Long)
POST	/context/:personId			controllers.ContextApp.joinMementoToPerson(personId: Long)


# Memento
GET		/publicmemento/:startId		controllers.MementoApp.getPublicMementoByLocation(startId: String)
GET		/publicmemento/:startDate	controllers.MementoApp.getPublicMementoByDate(startDate: Long)
GET		/publicmemento/:id			controllers.MementoApp.getPublicMementoById(id: Long)
GET		/publicmemento/:personId	controllers.MementoApp.getPublicMementoByContext(personId: Long)
POST	/publicmemento/:publicMementoId	controllers.MementoApp.addPublicMemento(publicMementoId: Long)
GET		/publicmemento/:country		controllers.MementoApp.getPublicMementoByCountry(country: String)
GET		/publicmemento/:region		controllers.MementoApp.getPublicMementoByRegion(region: String)
GET		/publicmemento/:city		controllers.MementoApp.getPublicMementoByCity(city: String)


