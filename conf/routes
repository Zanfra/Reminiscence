# Home page
GET     /                       controllers.Application.index()
GET		/assets/*file			controllers.Assets.at(path="/public", file)                                

# Tasks          
GET     /tasks                  controllers.Application.tasks()
POST    /tasks                  controllers.Application.newTask()
POST    /tasks/:id/delete       controllers.Application.deleteTask(id: Long)

# Context
GET		/person/:personId		controllers.ContextApp.findbyPerson(personId: Long)
GET		/context/:date			controllers.ContextApp.getContextByDate(date: FuzzyDate)
GET		/context/:cityForId		controllers.ContextApp.getContextByLocation(cityForId: Location)


# Memento
GET		/publicmemento/:startId	controllers.MementoApp.getPublicMementoByLocation(startId: Location)
GET		/publicmemento/:startDate	controllers.MementoApp.getPublicMementoByDate(startDate: FuzzyDate)
GET		/publicmemento/:id		controllers.MementoApp.getPublicMementoById(id: Long)