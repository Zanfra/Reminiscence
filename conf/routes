# Home page
GET     /                       controllers.Application.index()
GET		/assets/*file			controllers.Assets.at(path="/public", file)                                

# Tasks          
GET     /tasks                  controllers.Application.tasks()
POST    /tasks                  controllers.Application.newTask()
POST    /tasks/:id/delete       controllers.Application.deleteTask(id: Long)

# Context
GET		/person/:personId		controllers.ContextApp.findbyPerson(personId: Long)
GET		/context/:fuzzyDateId	controllers.ContextApp.getContextByDate(fuzzyDateId: Long)
GET		/context/:locationId	controllers.ContextApp.getContextByLocation(locationId: Long)


# Memento
GET		/publicmemento/:locationId	controllers.MementoApp.getPublicMementoByLocation(locationId: Long)
GET		/publicmemento/:fuzzyDateId	controllers.MementoApp.getPublicMementoByDate(fuzzyDateId: Long)
GET		/publicmemento/:id		controllers.MementoApp.getPublicMementoById(id: Long)